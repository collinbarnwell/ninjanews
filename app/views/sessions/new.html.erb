<% provide :title, 'Sign in' %>
<h1>Sign in</h1>
<div>
  <%= form_for(:session, url: sessions_path) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Sign in', class: 'btn btn-large btn-primary' %>
  <% end %>

  <p> Don't have an account yet? <%= link_to 'Sign up!', signup_path %></p>
</div>
