<% provide :title, 'Sign up' %>

<h1>New user</h1>

<%= link_to 'Back', users_path %>

<%= form_for @user do |f| %>
  <%= 	f.label :name %>
  <%= 	f.text_field :name %>

  <%=		f.label :email %>
  <%= 	f.text_field :email %>

  <%= 	f.label :password %>
  <%= 	f.password_field :password %>

  <%= 	f.label :password_confirmation %>
  <%= 	f.password_field :password_confirmation %>

  <%=		f.submit 'Create My Account', class: 'btn btn-large btn-primary' %>
<% end %>

