-if current_user.is_admin
  -provide :title, 'All Feeds'
  %h1 All Feeds
  %p.admin-text= link_to 'Create a new feed', new_feed_path
  %ul
    -@feeds.each do |feed|
      %li.admin-text
        = link_to "#{feed.section}, #{feed.source.title}", feed.url
        = "-----"
        = link_to 'Edit', edit_feed_path(feed)
        = "-----"
        = link_to 'Delete', feed_path(feed), method: :delete
-else
  %h1 ACCESS DENIED
  